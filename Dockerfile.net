# Use PostgreSQL 17 as the base image
FROM postgres:17

# Set PostgreSQL environment variables
ENV POSTGRES_USER=postgres
ENV POSTGRES_PASSWORD=postgres
ENV POSTGRES_DB=users

# Install prerequisites and .NET 8
RUN apt-get update && apt-get install -y \
    wget \
    curl \
    gnupg \
    && wget https://packages.microsoft.com/config/debian/11/packages-microsoft-prod.deb \
    && dpkg -i packages-microsoft-prod.deb \
    && apt-get update \
    && apt-get install -y \
    aspnetcore-runtime-8.0 \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Verify .NET installation
RUN dotnet --info

# Copy the database initialization script (optional)
WORKDIR /docker-entrypoint-initdb.d/
COPY init.sql /docker-entrypoint-initdb.d/init.sql

# Create a directory for the .NET application
WORKDIR /app

# Copy the published .NET application files to the container
COPY ./publish/ .

# Make entrypoint script executable and copy it
COPY entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/entrypoint.sh

# Expose .NET application port
EXPOSE 5000

# Use the entrypoint script to start both services
ENTRYPOINT ["entrypoint.sh"]